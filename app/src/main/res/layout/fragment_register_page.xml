
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context="com.example.dell.miniproject.RegisterPage">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageview1"
        android:background="@drawable/logo"
        android:layout_marginRight="2dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageview2"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/register_header_logo"
        android:layout_marginRight="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="E.No"
            android:textSize="22sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/edit1"
            android:hint="Enter No."
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="E.Name"
            android:textSize="22sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:id="@+id/edit2"
            android:hint="Enter Name"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="E Mail"
            android:textSize="22sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:id="@+id/edit3"
            android:hint="Enter Mail"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="P.word"
            android:textSize="22sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:id="@+id/edit4"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="22sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:inputType="textPassword"
            android:hint="Re-Enter Password"
            android:id="@+id/edit5"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="PW Hint"
            android:textSize="22sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="45dp"
            android:id="@+id/edit6"
            android:hint="Enter hints"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:id="@+id/buttonregistry"
            android:background="#88898A"
            android:layout_marginLeft="90dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Login"
            android:layout_marginTop="10dp"
            android:background="#88898A"
            android:id="@+id/buttonlogin2"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>



</LinearLayout>
