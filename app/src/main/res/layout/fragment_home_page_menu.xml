<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context="com.example.dell.miniproject.HomePageMenu">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageview1"
        android:background="@drawable/logo"
        android:layout_marginRight="2dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To Dravidian University"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="Enter Ph.D Deatails"
            android:textAllCaps="false"
            android:id="@+id/PhDbutton"
            android:background="#88898A"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
        <Button
            android:layout_width="239dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="63dp"
            android:padding="1dp"
            android:text="Enter Mphil Dessertations"
            android:textAllCaps="false"
            android:id="@+id/MphilButton"
            android:background="#88898A"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:padding="1dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/studentButton"
            android:text="Enter Student Projects"
            android:textAllCaps="false"
            android:background="#88898A"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sync_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="55dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="239dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:padding="1dp"
            android:id="@+id/facultyButton"
            android:layout_marginLeft="8dp"
            android:text="Enter Faculty Publications"
            android:textAllCaps="false"
            android:background="#88898A"

            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sync details from : Google server"
        android:textAllCaps="false"
        android:background="#88898A"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/synbutton"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:id="@+id/viewButton"
            android:background="@drawable/view_mage"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/search_image"
            android:textAllCaps="false"
            android:id="@+id/searchButton"/>
    </LinearLayout>


</LinearLayout>
